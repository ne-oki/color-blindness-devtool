{
  "name": "color-blindness-devtool",
  "version": "0.0.0",
  "private": true,
  "description": "A web component with TypeScript and Lit",
  "keywords": [
    "web-components",
    "lit-element",
    "typescript",
    "lit"
  ],
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "analyze": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist",
    "analyze:watch": "custom-elements-manifest analyze --litelement --globs \"src/**/*.ts\" --outdir dist --watch",
    "build": "npm run bundle && npm run analyze",
    "bundle": "tsup",
    "bundle:watch": "tsup --watch",
    "clean": "rimraf dist",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint .",
    "lint:eslint:fix": "eslint --fix .",
    "lint:lit-analyzer": "lit-analyzer",
    "test": "vitest --run",
    "test:watch": "vitest",
    "type-check": "tsc"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@color-blindness-devtool/base-configs": "*",
    "@custom-elements-manifest/analyzer": "^0.9.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0",
    "lit-analyzer": "^2.0.3",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "customElements": "dist/custom-elements.json"
}
